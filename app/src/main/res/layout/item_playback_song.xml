<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="song"
            type="com.github.s0nerik.music.data.models.Song"
            />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_width="220dp"
        tools:layout_gravity="center"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <com.github.s0nerik.music.ui.views.SquareWidthImageView
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:coverSrc='@{song.albumArtUri}'
                    android:src="@drawable/no_cover"
                    />

                <TextView
                    android:id="@+id/title"
                    android:layout_marginTop="16dp"
                    android:text="@{song.title}"
                    tools:text="Title"
                    style="@style/ItemText.Title"
                    />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_marginBottom="16dp"
                    android:text='@{song.artistNameForUi}'
                    tools:text="Subtitle"
                    style="@style/ItemText.Subtitle"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</layout>
