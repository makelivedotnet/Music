<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <import type="com.github.s0nerik.music.ext.ModelExtensionsKt" />
        <variable
            name="player"
            type="com.github.s0nerik.music.players.LocalPlayer"
            />
        <variable
            name="playerController"
            type="com.github.s0nerik.music.players.PlayerController"
            />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:playbackBgUri='@{playerController.currentSong.albumArtUri}'
            />

        <com.fivehundredpx.android.blur.BlurringView
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurRadius="12"
            app:downsampleFactor="6"
            app:overlayColor="#8000"
            />

        <com.github.s0nerik.music.ui.views.FixedTransformerViewPager
            android:id="@+id/songsViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            app:offscreenPageLimit='@{2}'
            app:currentItem='@{player.getQueue().observableCurrentIndex}'
            />

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomBar"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:padding="3dp"
            android:shadowColor="#000000"

            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"
            android:textColor="@android:color/white"

            android:text="@{player.observablePositionInMinutes}"
            tools:text="0:00"
            />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomBar"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="3dp"
            android:shadowColor="#000000"

            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"
            android:text="@{playerController.currentSong.durationString}"
            android:textColor="@android:color/white"

            tools:text="3:00"
            />

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            >

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="1000"
                android:progress="@{(int) (player.observableProgressPercent * 10f)}"
                tools:progress="500"
                style="@style/PlaybackSeekBar"
                />

            <include
                layout="@layout/part_playback_control_buttons"
                app:playerController="@{playerController}"
                />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@{playerController.currentSong.title}"
            app:subtitle="@{playerController.currentSong.artistNameForUi}"
            app:theme="@style/PlaybackToolbar"
            />

    </RelativeLayout>
</layout>